<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <style>
         .invalid-input {
            border: 2px solid red;
            background-color: #ffe6e6;
        }
        .valid-input {
            border: 2px solid green;
            background-color: #e6ffe6;
        }
    </style>

</head>
<body>
    <h1>NEW PAGE</h1>
    <form id="movieForm"     action="/movie"  method="POST" >
        <div>
            <label for="title">Title</label>
            <input type="text" name="movie[title]" id="title" placeholder="title" required >
           
        </div>
        <div>
            <label for="genre">Genre</label>
            <input type="text" name="movie[genre]" id="genre" placeholder="genre"required >
           
        </div>
        <div>
            <label for="year">Year</label>
            <input type="number" name="movie[year]" id="year" placeholder="year" required>
           
        </div>

      



        <button>Submit</button>

        <a href="/movie">ALL MOVIES</a>



    </form>


        
    <script>
        (function () {
            'use strict'

            const form = document.getElementById('movieForm');
            const inputs = form.querySelectorAll('input');

            form.addEventListener('submit', function (event) {
                let isValid = true;

                inputs.forEach(input => {
                    if (!input.value.trim()) {
                        // Highlight invalid input
                        input.classList.add('invalid-input');
                        input.classList.remove('valid-input');
                        isValid = false;
                    } else {
                        // Highlight valid input
                        input.classList.remove('invalid-input');
                        input.classList.add('valid-input');
                    }
                });

                if (!isValid) {
                    event.preventDefault(); // Prevent form submission if invalid
                }
            });

            // Optional: Real-time validation on input
            inputs.forEach(input => {
                input.addEventListener('input', function () {
                    if (input.value.trim()) {
                        input.classList.remove('invalid-input');
                        input.classList.add('valid-input');
                    } else {
                        input.classList.remove('valid-input');
                        input.classList.add('invalid-input');
                    }
                });
            });
        })();
        
    </script>



</body>
</html>