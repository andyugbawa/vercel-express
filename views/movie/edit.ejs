<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <style>
        .edit-container{
            display: flex;
            justify-content: center;
        }
        input{
            width: 920px;       
            padding: 8px;      
            font-size: 16px;    
        
        }
        .year{
            margin-top: 30px;
        }
        .genre{
            margin-top: 30px; 
        }

        .invalid-input {
           border: 2px solid red;
           background-color: #ffe6e6;
       }
       .valid-input {
           border: 2px solid green;
           background-color: #e6ffe6;
       }
       .submit{
        padding: 30px 0 0 0;
       }
       .submit-btn{
        padding: 5px 20px 10px 20px;
        border-radius: 15px;
        font-weight: bold;
        font-size: 15px; 
       }
       .reverse-btn{
        display: flex;
        padding: 30px 0 0 0;
        gap: 10px;
       }
       .btn-content{
        display: flex;
        gap: 20px;
       }
       .movie-all{
        padding: 5px 20px 10px 20px;
        border-radius: 15px;
        font-weight: bold;
        font-size: 15px;
       }
       .back-movie{
        padding: 5px 20px 10px 20px;
        border-radius: 15px;
        font-weight: bold;
        font-size: 15px;
       }
                 
       @media (max-width:768px) {
            input{
            width: 350px;       
            padding: 8px;      
            font-size: 16px;    
        
        }
        }

                
        @media (max-width:500px) {
            input{
            width: 250px;       
            padding: 8px;      
            font-size: 16px;    
        
        }
        }
   </style>
</head>
<body>

    <div class="edit-container">
        <div class="edit-content">
            <h1>EDIT PAGE</h1>
            <form id="movieForm"  action="/movie/<%= movie._id %>?_method=PUT" method="POST"  >
                <div>
                    <div class="title">
                        <label for="title">Title</label>
                    </div>
                    <input type="text" name="movie[title]" id="title" placeholder="title" value="<%=movie.title %>" required>
                </div>
               
               
                <div>
                    <div class="genre">
                        <label for="genre">Genre</label>
                    </div>
                    <input type="text" name="movie[genre]" id="genre" placeholder="genre" value="<%=movie.genre %>" required>
                </div>
                <div>
                    <div class="year">
                        <label for="year">Year</label>
                    </div>
                    <input type="number" name="movie[year]" id="year" placeholder="year" value="<%=movie.year %>" required >
                </div>
                <div class="btn-content">
                    <div class="submit">
                        <button class="submit-btn">Submit</button>
                    </div>
                     <div class="reverse-btn">
                        <button class="movie-all">
                            <a href="/movie">ALL MOVIES</a>
                        </button>
                        <button class="back-movie">
                            <a href="/movie/<%= movie._id %>">Back to movies</a>
                        </button>
                     </div>
                </div>
            </form>
    
        </div>

    </div>


        
    <script>
        (function () {
            'use strict'

            const form = document.getElementById('movieForm');
            const inputs = form.querySelectorAll('input');

            form.addEventListener('submit', function (event) {
                let isValid = true;

                inputs.forEach(input => {
                    if (!input.value.trim()) {
                        // Highlight invalid input
                        input.classList.add('invalid-input');
                        input.classList.remove('valid-input');
                        isValid = false;
                    } else {
                        // Highlight valid input
                        input.classList.remove('invalid-input');
                        input.classList.add('valid-input');
                    }
                });

                if (!isValid) {
                    event.preventDefault(); // Prevent form submission if invalid
                }
            });

            // Optional: Real-time validation on input
            inputs.forEach(input => {
                input.addEventListener('input', function () {
                    if (input.value.trim()) {
                        input.classList.remove('invalid-input');
                        input.classList.add('valid-input');
                    } else {
                        input.classList.remove('valid-input');
                        input.classList.add('invalid-input');
                    }
                });
            });
        })();
        
    </script>

   
</body>
</html>